<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="244dp"
    android:background="#123456"
    android:orientation="vertical" >

    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingTop="20dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:weightSum="100">
	    
    	<ImageButton
	        android:id="@+id/bConnect"
	        android:layout_width="fill_parent"
	        android:layout_height="45dp"
	        android:onClick="connect"
	        android:layout_weight="25"
	        android:src="@drawable/connect2"
	        android:background="@drawable/button_enter"
	        android:padding="10dp"
	        android:scaleType="fitCenter" />
    	
	    <ImageButton
	        android:id="@+id/bDisconnect"
	        android:layout_marginLeft="8dp"
	        android:layout_width="fill_parent"
	        android:layout_height="45dp"
	        android:onClick="disconnect"
	        android:layout_weight="25"
	        android:src="@drawable/disconnect2"
	        android:background="@drawable/button_disconnect"
	        android:padding="8dp"
	        android:scaleType="fitCenter" />

	    <ImageButton
	        android:id="@+id/bChangeIpPort"
	        android:layout_marginLeft="8dp"
	        android:layout_width="fill_parent"
	        android:layout_height="45dp"
	        android:onClick="ChangeIpPort"
	        android:layout_weight="25"
	        android:src="@drawable/change2"
	        android:background="@drawable/button_clear"
	        android:padding="8dp"
	        android:scaleType="fitCenter"  />

	    <ImageButton
	        android:id="@+id/bQuitAll"
	        android:layout_marginLeft="8dp"
	        android:layout_width="fill_parent"
	        android:layout_height="45dp"
	        android:onClick="QuitAll"
	        android:layout_weight="25"
	        android:src="@drawable/quit3"
	        android:background="@drawable/button_quit"
	        android:padding="7dp"
	        android:scaleType="fitCenter" />

	</LinearLayout>

    <FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom"
	    android:orientation="vertical" >
	    
	    <ProgressBar
	        android:id="@+id/pBconnection"
	        android:layout_gravity="center_horizontal"
	        android:paddingTop="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    
	    <ImageView
	        android:id="@+id/iVconnected"
	        android:layout_gravity="center_horizontal"
	        android:visibility="invisible"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/connected" />
	    
	</FrameLayout>
	
    <TextView
        android:id="@+id/tVconnectionStatus"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awaiting Connection" />

    

</LinearLayout>