<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivInactive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/inactive" />
    
    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/right" />

    <ImageView
        android:id="@+id/ivDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/down"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ivLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/left" />

    <ImageView
        android:id="@+id/ivUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/up" />

    <ImageView
        android:id="@+id/iVupcover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/up_cover" />
    
    <ImageView
        android:id="@+id/iVrightcover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/right_cover" />
    
    <ImageView
        android:id="@+id/iVdowncover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/down_cover" />
    
    <ImageView
        android:id="@+id/iVleftcover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/left_cover" />

    
    <ImageView
        android:id="@+id/iVupframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/up_frame" />
    
    <ImageView
        android:id="@+id/iVrightframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/right_frame" />
    
    <ImageView
        android:id="@+id/iVdownframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/down_frame" />
    
    <ImageView
        android:id="@+id/iVleftframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
		android:visibility="invisible"
        android:src="@drawable/left_frame" />

    <ImageView
        android:id="@+id/iVBackground_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/background_anim" />
    
    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingTop="135dp"
        android:paddingBottom="135dp"
        android:src="@drawable/car" />
    
</FrameLayout>
